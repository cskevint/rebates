= form_for @product_type do |f|
  - if @product_type.errors.any?
    #error_explanation
      h2 = "#{pluralize(@product_type.errors.count, "error")} prohibited this product_type from being saved:"
      ul
        - @product_type.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :sub_category_id
    = f.select "sub_category_id", @sub_categories.map {|c| [c.name, c.id]}, { :include_blank => true, :selected => params[:sub_category_id] }
  .actions = f.submit 'Save'


