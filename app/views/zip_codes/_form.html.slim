= form_for @zip_code do |f|
  - if @zip_code.errors.any?
    #error_explanation
      h2 = "#{pluralize(@zip_code.errors.count, "error")} prohibited this zip_code from being saved:"
      ul
        - @zip_code.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zone_id
    = f.select "zone_id", @zones.map {|c| [c.name, c.id]}, { :include_blank => true }
  .actions = f.submit 'Save'
